<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace指定该xml文件对应的接口 -->
<!-- 一个xml文件只对应一个接口 -->
<mapper namespace="com.kao.server.mapper.TestMapper">
    <insert id="addNewUser">
        INSERT INTO test_user (username,password,uid)
        VALUES (
                #{username},
                #{password},
                #{uid}
               )
    </insert>

    <select id="findUserById" resultType="com.kao.server.entity.UserTest">
        SELECT username,password,uid FROM test_user AS t WHERE t.uid = #{uid}

    </select>
</mapper>
